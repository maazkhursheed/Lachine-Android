<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="20dp"
                                    card_view:cardElevation="10dp"


>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

    >


        <LinearLayout android:id="@+id/thumbnail"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:focusable="false">

            <ImageView
                    android:id="@+id/itemMenu_image"
                    android:layout_width="105dip"
                    android:padding="100dp"
                    android:layout_height="105dip"
                    android:background="@drawable/food"/>

        </LinearLayout>

        <!-- Title Of Menu-->
        <TextView
                android:id="@+id/item_name"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Kababjees"
                android:textColor="#494444"
                android:typeface="sans"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"/>



        <!-- Rightend price -->
        <TextView
                android:id="@+id/item_price"
                android:background="@drawable/circle"

                android:layout_width="46dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="1275Rs"
                android:textSize="11dip"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"


        />
        <TextView
                android:id="@+id/item_viewBtn"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="VIEW"

                android:layout_below="@+id/item_name"
                android:layout_alignLeft="@+id/item_name"
                android:layout_alignStart="@+id/item_name"
                android:textSize="15sp"
                android:textColor="#696974"
                android:textAlignment="center"
                android:background="#F1F1F1"
                android:layout_marginTop="10dp"
                android:padding="5dp"/>
        <ImageView
                android:id="@+id/itemMenu_fvrt"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/item_name"
                android:layout_toRightOf="@+id/item_viewBtn"
                android:layout_toEndOf="@+id/item_viewBtn"
                android:src="@drawable/like"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#F1F1F1"
                android:padding="5dp"/>

        <!--<ImageView-->
